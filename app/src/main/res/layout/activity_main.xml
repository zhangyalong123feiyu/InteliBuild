<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F8"
    tools:context="com.bibinet.intelibuild.project.ui.baseui.MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <RelativeLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:background="@mipmap/banne" />
    <LinearLayout
        android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:layout_height="467dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/homerange_shape"
        android:layout_marginTop="-25dp"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/getProduct"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@mipmap/time"
                    android:layout_alignStart="@+id/textView" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="21dp"
                    android:text="采样"
                    android:textSize="15sp"
                    android:id="@+id/textView" />
            </RelativeLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_marginTop="18dp"
                android:layout_height="match_parent"
                android:background="#E0E0E0"/>
            <RelativeLayout
                android:id="@+id/checkProduct"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@mipmap/clock"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="21dp"
                    android:text="检测"
                    android:textSize="15sp"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="#E0E0E0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/historyCheck"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@mipmap/previous"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="21dp"
                    android:text="历史检测"
                    android:textSize="15sp"/>
            </RelativeLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"
                android:background="#E0E0E0"/>
            <RelativeLayout
                android:id="@+id/logout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv6"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@mipmap/shield"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="21dp"
                    android:text="退出"
                    android:textSize="15sp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
