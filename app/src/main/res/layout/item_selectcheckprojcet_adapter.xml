<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:id="@+id/itemView"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginTop="26dp"
        android:layout_weight="1"
        android:clickable="true"
        android:background="@drawable/checrange_shape"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/descrpImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            android:src="@mipmap/caiyang"
            />
        <TextView
            android:id="@+id/labelNumb"
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            android:textSize="11sp"
            android:textColor="#2878FF"
            />

        <ImageView
            android:id="@+id/projectImage"
            android:layout_width="24dp"
            android:layout_height="23dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
             />

        <TextView
            android:id="@+id/projectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/projectImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:text="抗拉强度"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/isSelectImage"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"
            android:visibility="gone"
            android:src="@mipmap/xuanzhong" />
    </RelativeLayout>
</LinearLayout>